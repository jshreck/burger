<div class="container">
    <div class="row">

        <div class="col s4 center-align col-title">
            <p>Ordered</p>
        </div>

        <div class="col s4 center-align col-title">
            <p>Place an Order!</p>
        </div>

        <div class="col s4 center-align col-title">
            <p>Eaten</p>
        </div>

    </div>
    <div class="row">

        <div class="col s4 center-align">
            {{#each burger}} 
            {{#unless devoured}}
            <div class="row">
                <div class="order">
                    <p>{{burger_name}}</p>
                    <form method="POST" action="/devour?_method=PUT" class="center-align">
                        <input type="hidden" name="id" value="{{id}}">
                        <button class="btn btn-small red darken-4 z-depth-3" type="submit">Devour</button>
                    </form>
                    <form method="POST" action="/cancel?_method=DELETE" class="center-align">
                        <input type="hidden" name="id" value="{{id}}">
                        <button class="btn btn-small red darken-4 z-depth-3" type="submit">Cancel Order</button>
                    </form>
                </div>
            </div>
            {{/unless}} 
            {{/each}}
        </div>

        <form method="POST" action="/order" class="col s4 center-align">
            <div class="input-field col s10 offset-s1">
                <input id="order_burger" type="text" name="burger_name">
                <label for="order_burger">Burger name</label>
            </div>
            <button class="btn btn-primary red darken-4 z-depth-3" type="submit">Order</button>
        </form>

        <div class="col s4 center-align">
            {{#each burger}} 
            {{#if devoured}}
            <div class="row">
                <div class="order">
                    <p>{{burger_name}}</p>
                </div>
            </div>
            {{/if}} 
            {{/each}}
        </div>

    </div>
</div>

